<Window x:Class="Supplies.Windows.AddNewComponentsTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supplies.Windows"
        mc:Ignorable="d"
        Title="Добавление типа комплектующего" Height="175" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Margin="0,0,0,0" TextWrapping="Wrap" Text="Добавление нового типа" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        
        <TextBox x:Name="NameTB" Width="200" Text="{Binding name}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1"/>

        <Button x:Name="AddBtn" Content="Добавить" Click="AddComponentsType" Width="80" Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="2"/>
    </Grid>
</Window>
